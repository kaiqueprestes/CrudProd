<Window x:Class="CrudProd.deletarProduto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrudProd"
        mc:Ignorable="d"
        Title="Deletar Produto" Height="127" Width="310">
    <Grid Margin="0,0,0,-16">
        <Button x:Name="buttonDelete" Content="Deletar" HorizontalAlignment="Center" Margin="0,63,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.05,-0.098" Width="104" Click="buttonDelete_Click"/>
        <TextBox x:Name="txtDeletar" HorizontalAlignment="Left" Margin="155,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="123"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="16,20,0,0" Text="Código do Produto" TextWrapping="Wrap" VerticalAlignment="Top" Width="128" FontSize="14" FontWeight="Bold"/>

    </Grid>
</Window>
